<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table>
  <thead>
    User <strong><%= current_user.email %></strong>'s to-do list
    <th>Name</th>
    <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <%if (current_user.id == item.user.id)%>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.user.email %></td>
          <td><%= link_to 'Show', item %></td>
          <td><%= link_to 'Edit', edit_item_path(item) %></td>
          <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, class: 'glyphicon glyphicon-ok' %></td>
        </tr>
      <%end%>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
